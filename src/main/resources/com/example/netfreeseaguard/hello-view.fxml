<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.netfreeseaguard.HelloController"
      stylesheets="@app.css"
      alignment="TOP_CENTER"
      spacing="20"
      prefWidth="360"
      prefHeight="720"
      style="-fx-background-color: linear-gradient(to bottom, #e0f3ff, #f5fbff);">

    <padding>
        <Insets top="40" right="24" bottom="40" left="24"/>
    </padding>

    <!-- Logo circle -->
    <StackPane prefWidth="80" prefHeight="80" styleClass="logo-circle">
        <Label text="≈≈≈"
               style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
    </StackPane>

    <!-- App title -->
    <Label text="NetFree SeaGuard"
           style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <!-- Subtitle -->
    <Label text="Protecting Our Oceans Together"
           style="-fx-font-size: 13; -fx-text-fill: #5a6a7a;"/>

    <Region prefHeight="10"/>

    <!-- Card -->
    <VBox spacing="16"
          prefWidth="320"
          style="-fx-background-color: white;
                 -fx-background-radius: 18;
                 -fx-padding: 24;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 18, 0.0, 0, 4);">

        <Label text="Welcome Back"
               style="-fx-font-size: 16; -fx-font-weight: bold;"/>

        <!-- Email -->
        <VBox spacing="6">
            <Label text="Email"
                   style="-fx-font-size: 12; -fx-text-fill: #4b5b6b;"/>
            <TextField fx:id="emailField"
                       promptText="your@email.com"
                       prefWidth="280"
                       style="-fx-background-radius: 20;
                              -fx-padding: 8 14 8 14;"/>
        </VBox>

        <!-- Password -->
        <VBox spacing="6">
            <Label text="Password"
                   style="-fx-font-size: 12; -fx-text-fill: #4b5b6b;"/>
            <PasswordField fx:id="passwordField"
                           promptText="••••••••"
                           prefWidth="280"
                           style="-fx-background-radius: 20;
                                  -fx-padding: 8 14 8 14;"/>
        </VBox>

        <!-- Log in button -->
        <Button fx:id="loginButton"
                text="Log in"
                onAction="#onLoginClick"
                prefWidth="280"
                style="-fx-background-radius: 20;
                       -fx-background-color: linear-gradient(to right, #2f86d9, #1bb8b0);
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-padding: 10 0 10 0;"/>

        <!-- Error text -->
        <Label fx:id="errorLabel"
               text=""
               style="-fx-text-fill: #d64545; -fx-font-size: 11;"/>

        <!-- Sign up row -->
        <HBox alignment="CENTER" spacing="4">
            <Label text="Don't have an account?"
                   style="-fx-font-size: 12; -fx-text-fill: #6a7684;"/>
            <Hyperlink text="Sign up"
                       onAction="#onSignUpClick"
                       style="-fx-font-size: 12;"/>
        </HBox>

    </VBox>

    <Region prefHeight="10"/>

    <!-- Footer text -->
    <Label text="By continuing, you agree to help protect our oceans"
           wrapText="true"
           maxWidth="260"
           style="-fx-font-size: 11; -fx-text-fill: #7a8a99;"/>

</VBox>
