<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.netfreeseaguard.SignupController"
            prefWidth="360.0" prefHeight="720.0"
            style="-fx-background-color: linear-gradient(to bottom,#0f172a,#0369a1);">

    <children>

        <!-- Back to login -->
        <Button text="â†"
                onAction="#onBackToLogin"
                AnchorPane.topAnchor="16.0"
                AnchorPane.leftAnchor="16.0"
                style="-fx-background-color: transparent;
                       -fx-text-fill: white;
                       -fx-font-size: 18;
                       -fx-border-color: transparent;"/>

        <!-- Card -->
        <VBox spacing="16"
              alignment="TOP_CENTER"
              AnchorPane.topAnchor="80.0"
              AnchorPane.leftAnchor="24.0"
              AnchorPane.rightAnchor="24.0">

            <Label text="Account aanmaken"
                   style="-fx-text-fill: white;
                          -fx-font-size: 20;
                          -fx-font-weight: bold;"/>

            <Label text="Kies je rol (tijdelijk) en log direct in"
                   wrapText="true"
                   style="-fx-text-fill: rgba(255,255,255,0.8);
                          -fx-font-size: 11;"/>

            <VBox spacing="10"
                  style="-fx-background-color: white;
                         -fx-background-radius: 18;
                         -fx-padding: 18;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 16, 0, 0, 4);">

                <!-- Email -->
                <VBox spacing="4">
                    <Label text="E-mailadres"
                           style="-fx-text-fill: #0f172a; -fx-font-size: 11;"/>
                    <TextField fx:id="emailField"
                               promptText="jij@example.com"
                               style="-fx-background-radius: 10;
                                      -fx-padding: 8 10 8 10;"/>
                </VBox>

                <!-- Password -->
                <VBox spacing="4">
                    <Label text="Wachtwoord"
                           style="-fx-text-fill: #0f172a; -fx-font-size: 11;"/>
                    <PasswordField fx:id="passwordField"
                                   promptText="Minimaal 6 tekens"
                                   style="-fx-background-radius: 10;
                                          -fx-padding: 8 10 8 10;"/>
                </VBox>

                <!-- Role choice -->
                <VBox spacing="6">
                    <Label text="Kies je rol"
                           style="-fx-text-fill: #0f172a; -fx-font-size: 11;"/>

                    <VBox spacing="4">
                        <CheckBox fx:id="visserCheck"
                                  text="Visser"
                                  selected="true"
                                  onAction="#onVisserChecked"
                                  style="-fx-text-fill: #0f172a; -fx-font-size: 11;"/>
                        <Label text="Kan ghost nets melden, eigen trackers zien."
                               wrapText="true"
                               style="-fx-text-fill: #64748b; -fx-font-size: 10;"/>
                    </VBox>

                    <VBox spacing="4">
                        <CheckBox fx:id="beheerderCheck"
                                  text="Beheerder (tijdelijk)"
                                  onAction="#onBeheerderChecked"
                                  style="-fx-text-fill: #0f172a; -fx-font-size: 11;"/>
                        <Label text="Toegang tot 'Beheer netten' om alles te beheren."
                               wrapText="true"
                               style="-fx-text-fill: #64748b; -fx-font-size: 10;"/>
                    </VBox>
                </VBox>

                <!-- Create account button -->
                <Button text="Account aanmaken"
                        onAction="#onCreateAccount"
                        maxWidth="Infinity"
                        style="-fx-background-radius: 14;
                               -fx-background-color: linear-gradient(to right,#0369a1,#06b6d4);
                               -fx-text-fill: white;
                               -fx-font-size: 13;
                               -fx-font-weight: bold;
                               -fx-padding: 8 0 8 0;
                               -fx-background-insets: 0;
                               -fx-border-color: transparent;"/>
            </VBox>
        </VBox>

    </children>
</AnchorPane>
